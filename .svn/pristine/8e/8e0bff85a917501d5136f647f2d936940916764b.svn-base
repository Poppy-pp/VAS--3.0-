.count-box
  padding 20px;
  border 1px solid #ccc
  border-radius 5px;
  height 120px;
  text-align center
  color #fff
  background #000000
  margin 5px 0
  cursor pointer

.count-sum
  font-size 24px;

.count-content
  font-size 22px;
  margin 10px 0;

.bg-cyan
  background #36cbcb
  border-color #36cbcb

.bg-yellow
  background #e6a23c
  border-color #e6a23c

.bg-blue
  background #409eff
  border-color #409eff

.bg-red
  background #f56c6c
  border-color #f56c6c

.general-situation
  display flex
  align-items center
  >span
    font-size 14px;
    margin-right 15px;