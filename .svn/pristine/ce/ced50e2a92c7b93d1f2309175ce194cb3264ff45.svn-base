<template>
    <el-table
            border
            stripe
            :data="list"
            @row-click="rowClick"
            style="width: 100%">
        <el-table-column
                align="center"
                type="index"
                width="50">
        </el-table-column>
        <el-table-column
                prop="cmsPackage.packcode"
                align="center"
                label="产品编码"
                width="180">
        </el-table-column>
        <el-table-column
                prop="cmsPackage.packdesc"
                align="center"
                label="产品名称">
        </el-table-column>
        <el-table-column
                prop="cmsPackage.packcontent"
                :formatter="contentFormatter"
                align="center"
                label="产品内容">
        </el-table-column>
        <el-table-column
                align="center"
                width="200"
                label="选择">
            <template slot-scope="scope">
                <el-radio v-model="selected" :label="scope.row.id" class="product-radio"></el-radio>
            </template>
        </el-table-column>
    </el-table>
</template>

<script>

    export default {
        name: "productList",
        data () {
            return {
                tableData: [],
                selected: ''
            }
        },
        props: ['list'],
        methods: {
            rowClick (row) {
                this.selected = row.id
                this.$emit('select', row)
            },
            contentFormatter (row) {
                if (!row.cmsPackprod.length)
                    return '无'
                return _.map(row.cmsPackprod, item => item.cmsProduct.proddesc).join('+')
            }
        }
    }
</script>

<style lang="stylus">
    .product-radio
        .el-radio__label
            display none

</style>